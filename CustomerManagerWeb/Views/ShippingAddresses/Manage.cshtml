@using CustomerManagement.Data
@model ShippingAddress

@{
    Layout = "";
}

<form method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control" id="address" value="@(string.IsNullOrEmpty(Model.Address) ? "" : Model.Address)" placeholder="Siemensallee 84">
    </div>

    <div class="form-group">
        <label for="postalCode">Postal Code</label>
        <input type="text" class="form-control" id="postalCode" value="@(string.IsNullOrEmpty(Model.PostalCode) ? "" : Model.PostalCode)" placeholder="76185">
    </div>
    
    <button type="submit" class="btn btn-success">@(Model.Id != 0 ? "Save" : "Create")</button>

</form>

