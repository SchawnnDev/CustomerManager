@using CustomerManagement.Data
@model ShippingAddress

@{
    Layout = "";
}

<form method="post" id="addressForm" action="ShippingAddresses/Manage">
    @Html.AntiForgeryToken()

    <input name="id" type="hidden" value="@Model.Id" />

    <input name="customerId" type="hidden" value="@Model.CustomerId" />

    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control ss-item-required" name="address" value="@(string.IsNullOrEmpty(Model.Address) ? "" : Model.Address)">
    </div>

    <div class="form-group">
        <label for="postalCode">Postal Code</label>
        <input type="text" class="form-control ss-item-required" name="postalCode" value="@(string.IsNullOrEmpty(Model.PostalCode) ? "" : Model.PostalCode)">
    </div>

</form>

