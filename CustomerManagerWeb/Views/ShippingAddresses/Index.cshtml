@using System.Collections
@using CustomerManagement.Data
@model List<ShippingAddress>

@{
    Layout = "";
}

<html>
<head>
    <title>ShippingAddresses</title>
    <link rel="stylesheet" href="~/Content/jquery-ui.css" type="text/css" />
    <script type="text/javascript" src="~/Scripts/jquery-ui.js"></script>
    <script type="text/javascript" src="~/Scripts/customers.js"></script>
</head>
<body style="background: gray">

    <div id="shippingAddresses" class="table-responsive">

        @Html.AntiForgeryToken()

        @if (Model.Count == 0)
        {
            <div>
                <button class="btn btn-success">Create new Shipping Address</button>
            </div>
        }
        else
        {
            <div>
                <table class="table table-bordered">
                    <tr>
                        <td>Address</td>
                        <td>Postal Code</td>
                    </tr>

                    @foreach (var address in Model)
                    {
                        <tr class="context-menu-two" data-customer-id="@address.CustomerId" data-address-id="@address.Id">
                            <td>@address.Address</td>
                            <td>@address.PostalCode</td>
                        </tr>
                    }

                </table>

            </div>
        }



    </div>
</body>
</html>
